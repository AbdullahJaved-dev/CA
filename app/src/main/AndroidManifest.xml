<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.logicielhouse.ca">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.NotificationsActivity" />
        <activity android:name=".ui.SongsActivity" />
        <activity android:name=".ui.ImagesActivity" />
        <activity android:name=".ui.VideosActivity" />
        <activity android:name=".ui.NewsActivity" />
        <activity
            android:name=".ui.VideoActivity"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".ui.SettingsActivity"
            android:configChanges="locale" />
        <activity
            android:name=".ui.SplashActivity"
            android:configChanges="locale"
            android:theme="@style/AppTheme3">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ViewMediaActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".ui.MainActivity"
            android:configChanges="locale"
            android:theme="@style/AppTheme2" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>